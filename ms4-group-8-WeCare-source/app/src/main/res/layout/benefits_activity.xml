<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomtoolbarmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1DDD4">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_content">
        <!-- HEADER NAVIGATION -->
        <!-- CONTENT -->
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_marginTop="0.0dp">
                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >



                    <ImageView
                        android:paddingTop="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/imageView"
                        android:src="@drawable/wecareicon"
                        android:layout_gravity="center_horizontal" />


                    <Space
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:background="#ffffff"
                        android:focusableInTouchMode="true"
                        android:foregroundGravity="center_vertical|fill"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="About us"
                        android:id="@+id/benifits"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="casual"
                        android:textColor="@color/black"
                        android:layout_gravity="left|top" />

                </FrameLayout></LinearLayout>
        </ScrollView>

        <!-- FOOTER NAVIGATION -->
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/footer_border"
            android:layout_width="match_parent"
            android:layout_height=".5px"
            android:layout_above="@+id/footer"
            android:layout_alignParentBottom="false" />
        <LinearLayout
            android:orientation="horizontal"
            android:background="#00CC99"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/footer">
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/tab1">
                <ImageButton
                    android:id="@+id/tab1_icon"
                    android:layout_weight="4"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_home"
                    android:clickable="true"
                    android:fontFamily="sans-serif-light" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/tab1_text"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="Home" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tab2">
                <ImageButton
                    android:id="@+id/tab2_icon"
                    android:layout_weight="4"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_buddy"
                    android:clickable="true"
                    android:fontFamily="sans-serif-light" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/tab2_text"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="Buddies" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tab3">
                <ImageButton
                    android:id="@+id/tab3_icon"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_benefits"
                    android:clickable="true"
                    android:fontFamily="sans-serif-light" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/tab3_text"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Benefits" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tab4">
                <ImageButton
                    android:id="@+id/tab4_icon"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_share"
                    android:clickable="true"
                    android:fontFamily="sans-serif-light" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/tab4_text"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Share" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
